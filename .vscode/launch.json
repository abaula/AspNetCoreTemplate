    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (AspNetCoreTemplate.WebApi)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build (AspNetCoreTemplate.WebApi)",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.1/AspNetCoreTemplate.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https://\\S+)",
                "uriFormat": "%s/swagger/index.html"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "dev"
            }
        }

    ]
}